<Window x:Class="WPFApp.Views.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="400" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Welcome, Admin" FontWeight="Bold" FontSize="18" Margin="0 0 0 20" HorizontalAlignment="Center"/>
        <Button Content="Manage Customers" Click="ManageCustomers_Click" Margin="0 5"/>
        <Button Content="Manage Rooms" Click="ManageRooms_Click" Margin="0 5"/>
        <Button Content="View Reports" Click="ViewReport_Click" Margin="0 5"/>
        <Button Content="Log Out" Click="Logout_Click" Margin="30 20 30 0"/>
    </StackPanel>
</Window>
