<Window x:Class="WPFApp.Views.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Dialog" Height="350" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Full Name"/>
        <TextBox Text="{Binding CustomerFullName}" Margin="0 5"/>

        <TextBlock Text="Telephone"/>
        <TextBox Text="{Binding Telephone}" Margin="0 5"/>

        <TextBlock Text="Email"/>
        <TextBox Text="{Binding EmailAddress}" Margin="0 5"/>

        <TextBlock Text="Birthday"/>
        <DatePicker SelectedDate="{Binding CustomerBirthday}" Margin="0 5"/>

        <Button Content="Save" Margin="0 10" Click="Save_Click" HorizontalAlignment="Center" Width="80"/>
    </StackPanel>
</Window>