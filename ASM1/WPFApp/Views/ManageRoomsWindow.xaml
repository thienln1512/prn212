<Window x:Class="WPFApp.Views.ManageRoomsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Rooms" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10">
            <Button Content="Add Room" Click="Add_Click" Margin="0 0 10 0"/>
            <Button Content="Edit Room" Click="Edit_Click" Margin="0 0 10 0"/>
            <Button Content="Delete Room" Click="Delete_Click"/>
        </StackPanel>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Rooms}" SelectedItem="{Binding SelectedRoom}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Number" Binding="{Binding RoomNumber}"/>
                <DataGridTextColumn Header="Description" Binding="{Binding RoomDescription}"/>
                <DataGridTextColumn Header="Max" Binding="{Binding RoomMaxCapacity}"/>
                <DataGridTextColumn Header="Price" Binding="{Binding RoomPricePerDate}"/>
                <DataGridTextColumn Header="Type ID" Binding="{Binding RoomTypeID}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>