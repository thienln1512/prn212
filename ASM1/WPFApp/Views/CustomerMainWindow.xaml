<Window x:Class="WPFApp.Views.CustomerMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Profile" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBlock Text="Welcome," FontWeight="Bold" FontSize="16" Margin="0 0 10 0"/>
            <TextBlock x:Name="CustomerNameText" FontSize="16"/>
            <Button Content="Edit Profile" Click="EditProfile_Click" Margin="30 0"/>
        </StackPanel>

        <DataGrid x:Name="BookingHistoryGrid" Grid.Row="1" AutoGenerateColumns="True"/>
    </Grid>
</Window>