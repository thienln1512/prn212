<Window x:Class="WPFApp.Views.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report Window" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
            <TextBlock Text="Start Date:" VerticalAlignment="Center"/>
            <DatePicker x:Name="StartDatePicker" Width="120" Margin="5 0"/>
            <TextBlock Text="End Date:" VerticalAlignment="Center" Margin="10 0 0 0"/>
            <DatePicker x:Name="EndDatePicker" Width="120" Margin="5 0"/>
            <Button Content="Generate" Click="Generate_Click" Margin="10 0"/>
        </StackPanel>
        <DataGrid x:Name="ReportGrid" Grid.Row="1" AutoGenerateColumns="True"/>
    </Grid>
</Window>