<Window x:Class="WPFApp.Views.RoomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Dialog" Height="400" Width="400">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="Room Number"/>
        <TextBox Text="{Binding RoomNumber}" Margin="0 5"/>

        <TextBlock Text="Description"/>
        <TextBox Text="{Binding RoomDescription}" Margin="0 5"/>

        <TextBlock Text="Max Capacity"/>
        <TextBox Text="{Binding RoomMaxCapacity}" Margin="0 5"/>

        <TextBlock Text="Price Per Date"/>
        <TextBox Text="{Binding RoomPricePerDate}" Margin="0 5"/>

        <TextBlock Text="Room Type"/>
        <ComboBox ItemsSource="{Binding RoomTypes}" 
                  DisplayMemberPath="RoomTypeName" 
                  SelectedItem="{Binding SelectedRoomType}" Margin="0 5"/>

        <Button Content="Save" Command="{Binding SaveCommand}" Margin="0 10"/>
    </StackPanel>
</Window>
